<Window x:Class="IpisCentralDisplayController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpisCentralDisplayController"
        xmlns:models="clr-namespace:IpisCentralDisplayController.models"
        xmlns:views="clr-namespace:IpisCentralDisplayController.views"
        xmlns:validation="clr-namespace:IpisCentralDisplayController.validation"
        xmlns:conv="clr-namespace:IpisCentralDisplayController.converters"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        mc:Ignorable="d" WindowState="Maximized" ResizeMode="CanResize"
        Title="CDC" Height="800" Width="1200">
    <Window.DataContext>
        <views:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <conv:IntToFontWeightConverter x:Key="IntToFontWeightConverter"/>
        <conv:IntToFontStyleConverter x:Key="IntToFontStyleConverter"/>
        <conv:IntToHorizontalAlignmentConverter x:Key="IntToHorizontalAlignmentConverter"/>
        <conv:IntToVerticalAlignmentConverter x:Key="IntToVerticalAlignmentConverter"/>
        <conv:LanguageToFontFamilyConverter x:Key="languageToFontFamilyConverter"/>
        <conv:UserRightsConverter x:Key="UserRightsConverter"/>
        <validation:PlatformNumberValidationRule x:Key="platformNumberValidationRule"/>
        <conv:ColorToBrushConverter x:Key="colorConverter"/>
        <conv:ColorToHexConverter x:Key="ColorToHexConverter"/>
        <conv:MacAddressConverter x:Key="MacAddressConverter"/>
        <conv:LineToIntegerConverter x:Key="LineToIntegerConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <conv:TimeSpanToDoubleConverter x:Key="TimeSpanToDoubleConverter"/>
        <conv:BooleanToReadOnlyConverter x:Key="BooleanToReadOnlyConverter"/>
        <conv:ADToStatusListConverter x:Key="ADToStatusListConverter"/>
        <conv:EnumToBoolConverter x:Key="EnumToBoolConverter"/>
    </Window.Resources>
   
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="1163*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,144">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Zoom In"/>
                <MenuItem Header="Zoom Out"/>
            </MenuItem>
            <MenuItem Header="Workspace">
                <MenuItem Header="Create New" Click="CreateNewWorkspace_Click"/>
                <MenuItem Header="Change" Click="ChangeWorkspace_Click"/>
                <MenuItem Header="Browse" Click="BrowseWorkspace_Click"/>
                <MenuItem Header="Export" Click="ExportWorkspace_Click"/>
                <MenuItem Header="Repair" Click="RepairWorkspace_Click"/>
                <Separator/>
                <MenuItem Header="Refresh" Click="RefreshWorkspace_Click"/>
            </MenuItem>
            <MenuItem Header="Master">
                <MenuItem Header="Stations" Click="StationMaster_Click"/>
                <MenuItem Header="Trains" Click="TrainsMaster_Click"/>
            </MenuItem>
            <MenuItem Header="Export">
                <MenuItem Header="Export Mapping" Click="ExportMapping_Click"/>
                <MenuItem Header="Import Mapping" Click="ImportMapping_Click"/>
            </MenuItem>
            <MenuItem Header="Import">
                <MenuItem Header="Export Mapping" Click="ExportMapping_Click"/>
                <MenuItem Header="Import Mapping" Click="ImportMapping_Click"/>
            </MenuItem>
            <MenuItem Header="User">
                <MenuItem Header="Logout" Click="Logout_Click"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Grid Grid.ColumnSpan="2" Margin="0,18,0,37">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="ACTIVE INSTANCE" Grid.Column="0" Margin="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="_" FontSize="24" TextAlignment="Center" HorizontalAlignment="Stretch" Background="AliceBlue" Margin="2"/>
                    <Grid Grid.Row="1" Margin="2" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Center" Text="USER" Grid.Row="0" Grid.Column="0" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="USER-NAME" Grid.Row="0" Grid.Column="1" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="USER-TYPE" Grid.Row="0" Grid.Column="2" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="IP-STATUS" Grid.Row="0" Grid.Column="3" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="CONNECTED DEVICES" Grid.Row="0" Grid.Column="4" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="NTES-STATUS" Grid.Row="0" Grid.Column="5" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="CAP-SERVER" Grid.Row="0" Grid.Column="6" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="RMS-SERVER" Grid.Row="0" Grid.Column="7" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Text="DATE-TIME" Grid.Row="0" Grid.Column="8" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="UserEmailStatus" Grid.Row="1" Grid.Column="0" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="UsernameStatus" Grid.Row="1" Grid.Column="1" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="UsertypeStatus" Grid.Row="1" Grid.Column="2" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="IpStatus" Grid.Row="1" Grid.Column="3" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="ConnectedDevicesStatus" Grid.Row="1" Grid.Column="4" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="NtesStatus" Grid.Row="1" Grid.Column="5" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="DateTimeStatus" Grid.Row="1" Grid.Column="8" Margin="2"/>
                        <TextBlock HorizontalAlignment="Center" Name="RMSStatus" Grid.Row="1" Grid.Column="7" Margin="2"/>
                    </Grid>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Margin="2">
                <GroupBox.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="ACTIVE MODE: "/>
                        <TextBlock VerticalAlignment="Center" Text="" x:Name="tb_activeMode"/>
                    </StackPanel>
                </GroupBox.Header>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10">
                    <Button Width="80" Height="30" Content="MASTER" Margin="5"/>
                    <Button Width="80" Height="30" Content="SLAVE" Margin="5"/>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Grid.ColumnSpan="2" Margin="0,125,0,0" Grid.RowSpan="5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TabControl x:Name="tc_main" Grid.Row="0" >
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Width" Value="100"/>
                            <!-- Set fixed width for tab headers -->
                        </Style>
                    </TabControl.Resources>

                    <TabItem Name="DashboardTab" Width="120" Height="30">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="24" Height="24" Source="icons/icon-train.png" Margin="2"/>
                                <TextBlock Text="DASHBOARD" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                            </StackPanel>
                        </TabItem.Header>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <GroupBox Header="Active Trains" Grid.Column="0" Margin="2" Background="AliceBlue">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <DataGrid SelectionMode="Single"  Name="ActiveTrainDataGrid" ItemsSource="{Binding ActiveTrains}"
                                                  SelectedItem="{Binding SelectedTrain, Mode=TwoWay}"
                                                  AutoGenerateColumns="False" Grid.Row="0" Margin="0,0,0,34" Grid.RowSpan="2" >
                                            <DataGrid.ColumnHeaderStyle>
                                                <Style TargetType="DataGridColumnHeader">
                                                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                </Style>
                                            </DataGrid.ColumnHeaderStyle>
                                            <DataGrid.Columns>
                                                <!-- Checkbox for Selection -->
                                                <DataGridTemplateColumn Header="SEL.">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Reference (NTES/User/Master) -->
                                                <DataGridTemplateColumn Header="REF" Width="60" SortMemberPath="Ref">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Ref}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Train Number -->
                                                <DataGridTemplateColumn Header="TRAIN#" Width="60" SortMemberPath="TrainNumber">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding TrainNumber}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Train Name -->
                                                <DataGridTemplateColumn Header="TRAIN NAME" Width="160" SortMemberPath="TrainNameEnglish">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding TrainNameEnglish}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Train Type -->
                                                <DataGridTemplateColumn Header="TYPE" Width="120">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding TrainType}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Source Code -->
                                                <DataGridTemplateColumn Header="SRC." Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding SrcCode}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Destination Code -->
                                                <DataGridTemplateColumn Header="DEST." Width="60">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding DestCode}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- STA -->
                                                <DataGridTemplateColumn Header="SCH ARR" Width="60" SortMemberPath="STA">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding STA, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- STD -->
                                                <DataGridTemplateColumn Header="SCH DEP" Width="60" SortMemberPath="STD">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding STD, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- A or D -->
                                                <DataGridTemplateColumn Header="A/D" Width="50">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox  
                                                              HorizontalAlignment="Stretch" 
                                                              VerticalAlignment="Center" 
                                                              Margin="2" 
                                                              ItemsSource="{Binding ADOptions}"
                                                              SelectedItem="{Binding SelectedADOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                              Height="24">
                                                                <!--<ComboBoxItem Content="A" />
                                                                <ComboBoxItem Content="D" />-->
                                                            </ComboBox>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Status -->
                                                <DataGridTemplateColumn Header="STATUS" Width="150">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <ComboBox 
                                                            ItemsSource="{Binding StatusOptions}" 
                                                            SelectedItem="{Binding SelectedStatusOption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                            HorizontalAlignment="Stretch" 
                                                            VerticalAlignment="Center" 
                                                            Margin="2" 
                                                            Height="24"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Late By (TimeSpan) -->
                                                <DataGridTemplateColumn Header="LATE/RESCH hh:mm" Width="100">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                                <xctk:IntegerUpDown 
                                                            Height="24" 
                                                            Value="{Binding LateByHours, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                Minimum="0" 
                                                                Maximum="23" 
                                                                Width="40" 
                                                                Margin="2,2,0,2"/>
                                                                <TextBlock Text=":" VerticalAlignment="Center" Margin="2"/>
                                                                <xctk:IntegerUpDown 
                                                            Height="24" 
                                                            Value="{Binding LateByMinutes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                                Minimum="0" 
                                                                Maximum="59" 
                                                                Width="40" 
                                                                Margin="0,2,2,2"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>


                                                <!-- ETA -->
                                                <DataGridTemplateColumn Header="EXP ARR" Width="60" SortMemberPath="ETA">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding ETA, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- ETD -->
                                                <DataGridTemplateColumn Header="EXP DEP" Width="60" SortMemberPath="ETD">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding ETD, StringFormat={}{0:hh\\:mm}}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- Platform Number -->
                                                <DataGridTemplateColumn Header="PF." Width="60" SortMemberPath="PFNo">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <xctk:IntegerUpDown Height="24" Value="{Binding PFNo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="100" Width="40" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>

                                                <!-- TADDB Update Checkbox -->
                                                <DataGridCheckBoxColumn Header="TADDB" Binding="{Binding TADDB_Update , Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="40">
                                                    <DataGridCheckBoxColumn.ElementStyle>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Margin" Value="2"/>
                                                        </Style>
                                                    </DataGridCheckBoxColumn.ElementStyle>
                                                </DataGridCheckBoxColumn>

                                                <!-- CGDB Update Checkbox -->
                                                <DataGridCheckBoxColumn Header="CGDB" Binding="{Binding CGDB_Update}" Width="40">
                                                    <DataGridCheckBoxColumn.ElementStyle>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Margin" Value="2"/>
                                                        </Style>
                                                    </DataGridCheckBoxColumn.ElementStyle>
                                                </DataGridCheckBoxColumn>

                                                <!-- Announce Update Checkbox -->
                                                <DataGridCheckBoxColumn Header="ANN" Binding="{Binding Announce_Update, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="40">
                                                    <DataGridCheckBoxColumn.ElementStyle>
                                                        <Style TargetType="CheckBox">
                                                            <Setter Property="HorizontalAlignment" Value="Center"/>
                                                            <Setter Property="VerticalAlignment" Value="Center"/>
                                                            <Setter Property="Margin" Value="2"/>
                                                        </Style>
                                                    </DataGridCheckBoxColumn.ElementStyle>
                                                </DataGridCheckBoxColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>

                                        
                                        
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                                                <Button Content="SEL-ALL" Width="80" Height="30" Margin="2" Click="SelectAll_Click"/>
                                                <Button Content="SEL-NTES" Width="80" Height="30" Margin="2" Click="SelectNTES_Click"/>
                                                <Button Content="SEL-DB" Width="80" Height="30" Margin="2" Click="SelectDB_Click"/>
                                                <Button Content="SEL-USER" Width="80" Height="30" Margin="2" Click="SelectManual_Click"/>
                                                <Button Content="UNDO-SEL" Width="80" Height="30" Margin="2" Click="UndoSelect_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                                                <Button Content="ADD-NEW" Width="80" Height="30" Margin="2" Click="AddNewActiveTrain_Click"/>
                                                <Button Content="GET-frm-DB" Width="80" Height="30" Margin="2" Click="AddFromDB_Click"/>
                                                <Button Content="EDIT" Width="80" Height="30" Margin="2" Click="EditActiveTrain_Click"/>
                                                <!--<Button Content="DELETE" Width="80" Height="30" Margin="2" Click="DeleteActiveTrain_Click"/>
                                                <Button Content="SAVE-to-DB" Width="80" Height="30" Margin="2" Click="SaveToDB_Click"/>-->
                                                <Button Content="Save temp" Width="80" Height="30" Margin="2" Command="{Binding SaveCommandTemp}"/>
                                                <Button Content="Load temp" Width="80" Height="30" Margin="2" Command="{Binding OpenCommandTemp}"/>
                                            </StackPanel>

                                        </Grid>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <!--<ColumnDefinition Width="Auto"/>
                                    --><!--<ColumnDefinition Width="*"/>--><!--
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>-->
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <GroupBox Header="CGDB Settings" Grid.Column="0" Margin="2" Background="AliceBlue">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Row="0" Grid.Column="0" Margin="2" Text="No Train"/>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Row="1" Grid.Column="0" Margin="2" Text="Vacant CGDB"/>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Row="2" Grid.Column="0" Margin="2" Text="Coach-Info NA"/>
                                        <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Row="3" Grid.Column="0" Margin="2" Text="Slide Dur (s)"/>
                                        <ComboBox Height="30" Width="60" Grid.Row="0" Grid.Column="1" SelectedIndex="1" Margin="2">
                                            <ComboBoxItem Content="Show Blank"/>
                                            <ComboBoxItem Content="Show Time"/>
                                        </ComboBox>
                                        <ComboBox Height="30" Width="60" Grid.Row="1" Grid.Column="1" SelectedIndex="1" Margin="2">
                                            <ComboBoxItem Content="Show Blank"/>
                                            <ComboBoxItem Content="Show Train No / Time"/>
                                        </ComboBox>
                                        <ComboBox Height="30" Width="60" Grid.Row="2" Grid.Column="1" SelectedIndex="1" Margin="2">
                                            <ComboBoxItem Content="Show Blank"/>
                                            <ComboBoxItem Content="Show Train No / Time"/>
                                        </ComboBox>
                                        <xctk:IntegerUpDown Height="30" Width="60" Grid.Row="3" Grid.Column="1" Value="30" Margin="2"/>
                                    </Grid>
                                </GroupBox>
                                <!--<GroupBox Grid.Column="1" Header="CGDB Sequence" Margin="2" Background="AliceBlue">
                                </GroupBox>-->


                                <GroupBox Header="CGDB Options" Grid.Column="1" Margin="2" Background="AliceBlue">
                                    <Grid Margin="5" HorizontalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button HorizontalAlignment="Left" Height="30" Width="80" Content="SET" Grid.Row="0" Grid.Column="0" Margin="2"/>
                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" >
                                            <Button Height="30" Width="40" Content="CLR" Margin="2"/>
                                            <TextBlock VerticalAlignment="Center" Text="PF."/>
                                            <xctk:IntegerUpDown Height="30" VerticalAlignment="Center" Margin="2" Value="1" Minimum="1"/>
                                        </StackPanel>
                                        <Button HorizontalAlignment="Left" Height="30" Width="80" Content="REV" Grid.Row="2" Grid.Column="0" Margin="2"/>
                                    </Grid>
                                </GroupBox>
                                <GroupBox Header="TADDB Options" Grid.Column="2" Margin="2" Background="AliceBlue">
                                    <Grid Margin="5" HorizontalAlignment="Center">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button HorizontalAlignment="Left" Height="30" Width="80"
                                                Content="SET" Grid.Row="0" Grid.Column="0"
                                                Margin="2" Command="{Binding TADDB_SET_Command }"/>
                                        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" >
                                            <Button Height="30" Width="40" Content="CLR" Margin="2"/>
                                            <TextBlock VerticalAlignment="Center" Text="PF."/>
                                            <xctk:IntegerUpDown Height="30" VerticalAlignment="Center" Margin="2" Value="1" Minimum="1"/>
                                        </StackPanel>
                                        <Button HorizontalAlignment="Left" Height="30" Width="80" Content="CLR-SEL" Grid.Row="2" Grid.Column="0" Margin="2"/>
                                    </Grid>
                                </GroupBox>
                                
                                
                                <GroupBox Header="ANNOUNCEMENT" Grid.Column="3" Margin="2" Background="AliceBlue">
                                    <Grid>
                                        
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        
                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <CheckBox Content="Station" IsChecked="True" Grid.Row="0" Grid.Column="0" Height="30" Margin="2" VerticalContentAlignment="Center"/>
                                            <CheckBox Content="Monitor" Grid.Row="0" Grid.Column="1" Height="30" Margin="2" VerticalContentAlignment="Center"/>
                                            <TextBlock VerticalAlignment="Center" TextAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="2" Text="REPEAT"/>
