<Window x:Class="IpisCentralDisplayController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpisCentralDisplayController"
        xmlns:models="clr-namespace:IpisCentralDisplayController.models"
        xmlns:views="clr-namespace:IpisCentralDisplayController.views"
        xmlns:validation="clr-namespace:IpisCentralDisplayController.validation"
        xmlns:conv="clr-namespace:IpisCentralDisplayController.converters"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" 
        mc:Ignorable="d" WindowState="Maximized" ResizeMode="CanResize"
        Title="CDC" Height="800" Width="1200">
    <Window.DataContext>
        <views:MainViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <conv:IntToFontWeightConverter x:Key="IntToFontWeightConverter"/>
        <conv:IntToFontStyleConverter x:Key="IntToFontStyleConverter"/>
        <conv:IntToHorizontalAlignmentConverter x:Key="IntToHorizontalAlignmentConverter"/>
        <conv:IntToVerticalAlignmentConverter x:Key="IntToVerticalAlignmentConverter"/>
        <conv:LanguageToFontFamilyConverter x:Key="languageToFontFamilyConverter"/>
        <conv:UserRightsConverter x:Key="UserRightsConverter"/>
        <validation:PlatformNumberValidationRule x:Key="platformNumberValidationRule"/>
        <conv:ColorToBrushConverter x:Key="colorConverter"/>
        <conv:ColorToHexConverter x:Key="ColorToHexConverter"/>
        <conv:MacAddressConverter x:Key="MacAddressConverter"/>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="true">
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                </Trigger>
                <Trigger Property="Validation.HasError" Value="false">
                    <Setter Property="BorderBrush" Value="Lime"/>
                </Trigger>
                <Trigger Property="Text" Value="">
                    <Setter Property="BorderBrush" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem Header="Open"/>
                <MenuItem Header="Save"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Undo"/>
                <MenuItem Header="Redo"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Zoom In"/>
                <MenuItem Header="Zoom Out"/>
            </MenuItem>
            <Menu>
                <MenuItem Header="Workspace">
                    <MenuItem Header="Create New" Click="CreateNewWorkspace_Click"/>
                    <MenuItem Header="Change" Click="ChangeWorkspace_Click"/>
                    <MenuItem Header="Browse" Click="BrowseWorkspace_Click"/>
                    <MenuItem Header="Export" Click="ExportWorkspace_Click"/>
                    <MenuItem Header="Repair" Click="RepairWorkspace_Click"/>
                    <Separator/>
                    <MenuItem Header="Refresh" Click="RefreshWorkspace_Click"/>
                </MenuItem>
            </Menu>
            <MenuItem Header="Export">
                <MenuItem Header="Export Mapping" Click="ExportMapping_Click"/>
                <MenuItem Header="Import Mapping" Click="ImportMapping_Click"/>
            </MenuItem>
            <MenuItem Header="Import">
                <MenuItem Header="Export Mapping" Click="ExportMapping_Click"/>
                <MenuItem Header="Import Mapping" Click="ImportMapping_Click"/>
            </MenuItem>
            <!--<MenuItem Header="Platform-Devices">
                <MenuItem Header="Export Mapping" Click="ExportMapping_Click"/>
                <MenuItem Header="Import Mapping" Click="ImportMapping_Click"/>
            </MenuItem>-->
            <MenuItem Header="User">
                <MenuItem Header="Logout" Click="Logout_Click"/>
            </MenuItem>

            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <ToolBar Grid.Row="1" Height="60">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--<StackPanel Orientation="Horizontal" Grid.Column="0">
                    <Button Content="Button1" Width="100" Height="30"/>
                    <Button Content="Button2" Width="100" Height="30"/>
                </StackPanel>-->
                <StackPanel Orientation="Horizontal" Grid.Column="0" >
                    <TextBlock Name="StationInfoTextBlock" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="18" FontWeight="Bold" Margin="5"/>
                </StackPanel>
            </Grid>
        </ToolBar>

        <Grid Grid.Row="2" Margin="2" HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="160"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" Text="USER" Grid.Row="0" Grid.Column="0" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="USER-NAME" Grid.Row="0" Grid.Column="1" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="USER-TYPE" Grid.Row="0" Grid.Column="2" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="IP-STATUS" Grid.Row="0" Grid.Column="3" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="CONNECTED DEVICES" Grid.Row="0" Grid.Column="4" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="NTES-STATUS" Grid.Row="0" Grid.Column="5" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Text="DATE-TIME" Grid.Row="0" Grid.Column="6" FontWeight="Bold" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="UserEmailStatus" Grid.Row="1" Grid.Column="0" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="UsernameStatus" Grid.Row="1" Grid.Column="1" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="UsertypeStatus" Grid.Row="1" Grid.Column="2" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="IpStatus" Grid.Row="1" Grid.Column="3" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="ConnectedDevicesStatus" Grid.Row="1" Grid.Column="4" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="NtesStatus" Grid.Row="1" Grid.Column="5" Margin="5"/>
            <TextBlock HorizontalAlignment="Center" Name="DateTimeStatus" Grid.Row="1" Grid.Column="6" Margin="5"/>
        </Grid>
        <TabControl x:Name="tc_main" Grid.Row="3">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Width" Value="100"/>
                    <!-- Set fixed width for tab headers -->
                </Style>
            </TabControl.Resources>

            <TabItem Name="DashboardTab" Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-train.png" Margin="2"/>
                        <TextBlock Text="TRAINS" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Dashboard" Margin="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!-- Train List and CGDB Manager -->
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <!--<ColumnDefinition Width="1*"/>-->
                                </Grid.ColumnDefinitions>

                                <GroupBox Header="Train List" Grid.Column="0" Margin="5">
                                    <ListBox Name="TrainListBox" Margin="5"/>
                                </GroupBox>

                                <!--<GroupBox Header="CGDB Manager" Grid.Column="1" Margin="5">
                                    <ListBox Name="CgdbManagerListBox" Margin="5"/>
                                </GroupBox>-->
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Name="PaSystemTab" Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-speaker.png" Margin="2"/>
                        <TextBlock Text="PA" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <GroupBox Header="Public Announcement System" Grid.Row="0" Margin="5">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Voice Recorder & Media Player -->
                                <GroupBox Header="Voice Recorder and Media Player" Grid.Column="0" Margin="5">
                                    <StackPanel Margin="5">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                            <Button Name="StartRecordingButton" Content="Start Recording" Width="100" Height="30" Click="StartRecordingButton_Click" Margin="5"/>
                                            <Button Name="PauseRecordingButton" Content="Pause Recording" Width="100" Height="30" Click="PauseRecordingButton_Click" Margin="5" IsEnabled="False"/>
                                            <Button Name="StopRecordingButton" Content="Stop Recording" Width="100" Height="30" Click="StopRecordingButton_Click" Margin="5" IsEnabled="False"/>
                                            <Button Name="ResumeRecordingButton" Content="Resume Recording" Width="100" Height="30" Click="ResumeRecordingButton_Click" Margin="5" IsEnabled="False"/>
                                        </StackPanel>
                                        <TextBlock Name="ElapsedTimeTextBlock" Text="0:00" HorizontalAlignment="Center" Margin="5"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                                            <Button Name="PlayAudioButton" Content="Play" Width="100" Height="30" Click="PlayAudioButton_Click" Margin="5" IsEnabled="False"/>
                                            <Button Name="PauseAudioButton" Content="Pause" Width="100" Height="30" Click="PauseAudioButton_Click" Margin="5" IsEnabled="False"/>
                                            <Button Name="StopAudioButton" Content="Stop" Width="100" Height="30" Click="StopAudioButton_Click" Margin="5" IsEnabled="False"/>
                                            <Button Name="SaveAudioButton" Content="Save" Width="100" Height="30" Click="SaveAudioButton_Click" Margin="5" IsEnabled="False"/>
                                        </StackPanel>
                                        <Slider Name="AudioSlider" Minimum="0" Maximum="100" TickFrequency="1" Margin="5" ValueChanged="AudioSlider_ValueChanged"/>
                                        <TextBlock Name="CurrentTimeTextBlock" Text="0:00" HorizontalAlignment="Center" Margin="5"/>
                                        <TextBlock Name="DurationTextBlock" Text="0:00" HorizontalAlignment="Center" Margin="5"/>
                                    </StackPanel>
                                </GroupBox>

                                <!-- Audio Configuration -->
                                <GroupBox Header="Audio Configuration" Grid.Column="1" Margin="5">
                                    <!--<StackPanel Margin="5">
                                        <ComboBox Name="AudioInterfaceComboBox" Width="200" Height="30" Margin="5"/>
                                        <ComboBox Name="MicrophoneComboBox" Width="200" Height="30" Margin="5"/>
                                        <Slider Name="MicVolumeSlider" Minimum="0" Maximum="100" TickFrequency="1" Margin="5" ValueChanged="MicVolumeSlider_ValueChanged"/>
                                        <CheckBox Name="MicMuteCheckBox" Content="Mute Microphone" Margin="5" Checked="MicMuteCheckBox_Checked" Unchecked="MicMuteCheckBox_Unchecked"/>
                                        <ComboBox Name="PaSpeakerComboBox" Width="200" Height="30" Margin="5"/>
                                        <Slider Name="PaVolumeSlider" Minimum="0" Maximum="100" TickFrequency="1" Margin="5" ValueChanged="PaVolumeSlider_ValueChanged"/>
                                        <CheckBox Name="PaMuteCheckBox" Content="Mute PA Speaker" Margin="5" Checked="PaMuteCheckBox_Checked" Unchecked="PaMuteCheckBox_Unchecked"/>
                                        <ComboBox Name="LocalSpeakerComboBox" Width="200" Height="30" Margin="5"/>
                                        <Slider Name="LocalVolumeSlider" Minimum="0" Maximum="100" TickFrequency="1" Margin="5" ValueChanged="LocalVolumeSlider_ValueChanged"/>
                                        <CheckBox Name="LocalMuteCheckBox" Content="Mute Local Speaker" Margin="5" Checked="LocalMuteCheckBox_Checked" Unchecked="LocalMuteCheckBox_Unchecked"/>
                                        <CheckBox Name="PlayOnPaSpeakerCheckBox" Content="Play on PA Speaker" Margin="5"/>
                                        <CheckBox Name="PlayOnLocalSpeakerCheckBox" Content="Play on Local Speaker" Margin="5"/>
                                    </StackPanel>-->
                                </GroupBox>
                            </Grid>

                            <!-- Playlist and Audio Files -->
                            <Grid Grid.Row="1" Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <GroupBox Header="Playlist" Grid.Column="0" Margin="5">
                                    <ListBox Name="PlaylistListBox" Margin="5"/>
                                </GroupBox>

                                <GroupBox Header="Audio Files" Grid.Column="1" Margin="5">
                                    <ListBox Name="AudioFilesListBox" Margin="5"/>
                                </GroupBox>
                            </Grid>
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>

            <TabItem Name="MultimediaTab" Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-media.png" Margin="2"/>
                        <TextBlock Text="MEDIA" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="50*"/>
                    </Grid.RowDefinitions>

                    <!-- Timeline Component -->
                    <GroupBox Header="Timeline" Grid.Row="0" Margin="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                            <ListBox Name="TimelineListBox" Margin="5">
                                <!-- Placeholder for Timeline items -->
                            </ListBox>
                        </ScrollViewer>
                    </GroupBox>

                    <!-- Media Management and Preview -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Media Management Tabs -->
                        <GroupBox Header="Media Management" Margin="5" Grid.Column="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TabControl Name="MediaTabControl" Grid.Row="0" SelectionChanged="HandleTabChange">
                                    <TabItem Header="Overlay" Width="160" Height="30">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="Overlay specific content goes here." Margin="5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                    <TabItem Header="Text" Width="160" Height="30">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="Text specific content goes here." Margin="5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                    <TabItem Header="Media" Width="160" Height="30">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="Media specific content goes here." Margin="5"/>
                                                <Button Content="Import Media" Width="100" Height="30" Click="ImportMediaButton_Click" Margin="5"/>
                                                <ListBox Name="MediaFilesListBox" Margin="5" SelectionChanged="MediaFilesListBox_SelectionChanged">
                                                    <ListBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="{Binding Name}" Margin="5"/>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ListBox.ItemTemplate>
                                                </ListBox>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                    <TabItem Header="Effects" Width="160" Height="30">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="Effects specific content goes here." Margin="5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                    <TabItem Header="Transitions" Width="160" Height="30">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="5">
                                            <StackPanel Margin="5">
                                                <TextBlock Text="Transitions specific content goes here." Margin="5"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </TabItem>
                                </TabControl>
                            </Grid>
                        </GroupBox>

                        <!-- Preview Window -->
                        <GroupBox Header="Preview Window" Margin="5" Grid.Column="1">
                            <StackPanel Margin="5">
                                <TextBlock Text="Preview of the media will be shown here." Margin="5"/>
                                <!-- Placeholder for preview window -->
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Grid>
            </TabItem>

            <!--<TabItem Name="LcdTvTab" Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-lcd.png" Margin="2"/>
                        <TextBlock Text="LCD-TV" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>

            </TabItem>-->

            <TabItem Name="DisplaysTab" Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-lcd.png" Margin="2"/>
                        <TextBlock Text="DISPLAYS" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <GroupBox Header="Display List" Grid.Column="0"></GroupBox>
                    <GroupBox Header="Test Display" Grid.Column="1">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TabControl Margin="2">
                                <TabItem Header="Mono-Display" Width="120">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Train No" Grid.Row="0" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Train Name" Grid.Row="1" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Expected Time" Grid.Row="2" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Arrival/Departure" Grid.Row="3" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Platform Number" Grid.Row="4" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Coach Sequence" Grid.Row="5" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="CGDB Text" Grid.Row="9" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Brightness" Grid.Row="10" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Transition" Grid.Row="11" Grid.Column="0" Margin="5"/>
                                            <TextBlock Text="Effect" Grid.Row="12" Grid.Column="0" Margin="5"/>
                                            <xctk:IntegerUpDown x:Name="ud_train_no" Grid.Row="0" Grid.Column="1" Width="200" Margin="2"/>
                                            <TextBox x:Name="tb_train_name" Grid.Row="1" Grid.Column="1" Width="200" Margin="2" />
                                            <TextBox x:Name="tb_exp_time" Grid.Row="2" Grid.Column="1" Width="200" Margin="2"/>
                                            <ComboBox x:Name="cb_ad" Grid.Row="3" Grid.Column="1" SelectedIndex="0" Width="200" Margin="2">
                                                <ComboBoxItem Content="A"/>
                                                <ComboBoxItem Content="D"/>
                                            </ComboBox>
                                            <xctk:IntegerUpDown x:Name="ud_pf_no" Value="1" Grid.Row="4" Grid.Column="1" Width="200" Margin="2"/>
                                            <TextBox x:Name="tb_coach_seq_1" Grid.Row="5" Grid.Column="1" Width="200" Margin="2" TextWrapping="Wrap"/>
                                            <TextBox x:Name="tb_coach_seq_2" Grid.Row="6" Grid.Column="1" Width="200" Margin="2" TextWrapping="Wrap"/>
                                            <TextBox x:Name="tb_coach_seq_3" Grid.Row="7" Grid.Column="1" Width="200" Margin="2" TextWrapping="Wrap"/>
                                            <TextBox x:Name="tb_coach_seq_4" Grid.Row="8" Grid.Column="1" Width="200" Margin="2" TextWrapping="Wrap"/>
                                            <TextBox x:Name="tb_cgdb" Grid.Row="9" Grid.Column="1" Width="200" Margin="2"/>
                                            <Slider x:Name="sl_brght" Grid.Row="10" Grid.Column="1" Width="100" Margin="2" Minimum="25" Maximum="100" SmallChange="25" LargeChange="25" Value="100" />
                                            <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1" >
                                                <ComboBox x:Name="cb_transitions" Width="100" Margin="2" SelectedIndex="0">
                                                    <ComboBoxItem Content="None"/>
                                                    <ComboBoxItem Content="Curtain Left - Right"/>
                                                    <ComboBoxItem Content="Curtain Right - Left"/>
                                                    <ComboBoxItem Content="Curtain Top - Bottom"/>
                                                    <ComboBoxItem Content="Curtain Bottom - Top"/>
                                                    <ComboBoxItem Content="Running Left - Right"/>
                                                    <ComboBoxItem Content="Running Right - Left"/>
                                                    <ComboBoxItem Content="Running Top - Bottom"/>
                                                    <ComboBoxItem Content="Running Bottom - Top"/>
                                                </ComboBox>
                                                <ComboBox x:Name="cb_transition_speed" Width="100" Margin="2" SelectedIndex="2">
                                                    <ComboBoxItem Content="Lowest"/>
                                                    <ComboBoxItem Content="Low"/>
                                                    <ComboBoxItem Content="Medium"/>
                                                    <ComboBoxItem Content="High"/>
                                                    <ComboBoxItem Content="Highest"/>
                                                </ComboBox>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Grid.Row="12" Grid.Column="1" >
                                                <ComboBox x:Name="cb_effects" Width="100" Margin="2" SelectedIndex="0">
                                                    <ComboBoxItem Content="Steady"/>
                                                    <ComboBoxItem Content="Scroll"/>
                                                    <ComboBoxItem Content="Flashing"/>
                                                </ComboBox>
                                                <ComboBox x:Name="cb_effect_speed" Width="100" Margin="2" SelectedIndex="2">
                                                    <ComboBoxItem Content="Lowest"/>
                                                    <ComboBoxItem Content="Low"/>
                                                    <ComboBoxItem Content="Medium"/>
                                                    <ComboBoxItem Content="High"/>
                                                    <ComboBoxItem Content="Highest"/>
                                                </ComboBox>
                                            </StackPanel>


                                        </Grid>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <GroupBox x:Name="gb_sldb" Grid.Row="0" Grid.Column="0" Margin="2">
                                                    <GroupBox.Header>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="SLDB/MLDB" Margin="5"/>
                                                            <CheckBox x:Name="cb_sldb" Content="" Margin="5" Checked="cb_sldb_checked"/>
                                                        </StackPanel>
                                                    </GroupBox.Header>
                                                    <Canvas TextOptions.TextFormattingMode="Display" TextOptions.TextRenderingMode="Aliased"  RenderOptions.EdgeMode="Aliased" x:Name="lb_canvas_sldb" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Black" Width="336" Height="16">
                                                        <Canvas.RenderTransform>
                                                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                                                        </Canvas.RenderTransform>
                                                        <Canvas.RenderTransformOrigin>
                                                            <Point X="0.5" Y="0.5"/>
                                                        </Canvas.RenderTransformOrigin>

                                                        <TextBlock FontFamily="Arial" FontWeight="Bold" x:Name="tb_canvas_sldb_1" HorizontalAlignment="Center" FontSize="16" Width="55" Height="16" Text="{Binding ElementName=ud_train_no, Path=Value}"
