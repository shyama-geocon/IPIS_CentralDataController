                                    <MenuItem Header="Add to Playlist" Click="AddToPlaylistFromBank_Click" />
                                    <MenuItem Header="Import" Click="ImportAudio_Click" />
                                    <MenuItem Header="Delete" Click="DeleteAudioFromBank_Click" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>
                    </Grid>
                </GroupBox>

                <GroupBox Header="Voice Recording / Playback" Grid.Row="3" Margin="2" Background="AliceBlue">
                    <Grid Margin="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!-- Controls and Graph Display (First Column) -->
                        <StackPanel Grid.Column="0" Margin="2">
                            <!-- Graph Display for Audio -->
                            <Border Background="LightGray" Height="100" Margin="2">
                                <!-- Placeholder for Graph Display (You may replace with actual graph display control) -->
                                <TextBlock Text="Audio Graph Display" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="DarkGray"/>
                            </Border>

                            <!-- Audio Slider and Timers -->
                            <Slider Name="AudioSlider" Minimum="0" Maximum="100" TickFrequency="1" Margin="2" ValueChanged="AudioSlider_ValueChanged" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                                <TextBlock Name="CurrentTimeTextBlock" Text="0:00" Margin="5" VerticalAlignment="Center" />
                                <TextBlock Text="/" Margin="5" VerticalAlignment="Center" />
                                <TextBlock Name="DurationTextBlock" Text="0:00" Margin="5" VerticalAlignment="Center" />
                            </StackPanel>

                            <!-- Control Buttons (Record, Play, Pause, Stop, Save) -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
                                <Button Name="RecordButton" Width="40" Height="40" Click="RecordButton_Click" Margin="2" ToolTip="Start Recording">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE7C3;" VerticalAlignment="Center" FontSize="16"/>
                                        <!-- Record Icon -->
                                    </StackPanel>
                                </Button>

                                <Button Name="PlayButton" Width="40" Height="40" Click="PlayButton_Click" Margin="2" ToolTip="Play" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE768;" VerticalAlignment="Center" FontSize="16"/>
                                        <!-- Play Icon -->
                                    </StackPanel>
                                </Button>

                                <Button Name="PauseButton" Width="40" Height="40" Click="PauseButton_Click" Margin="2" ToolTip="Pause" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE769;" VerticalAlignment="Center" FontSize="16"/>
                                        <!-- Pause Icon -->
                                    </StackPanel>
                                </Button>

                                <Button Name="StopButton" Width="40" Height="40" Click="StopButton_Click" Margin="2" ToolTip="Stop" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE15B;" VerticalAlignment="Center" FontSize="16"/>
                                        <!-- Stop Icon -->
                                    </StackPanel>
                                </Button>

                                <Button Name="SaveButton" Width="40" Height="40" Click="SaveButton_Click" Margin="2" ToolTip="Save" IsEnabled="False">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE105;" VerticalAlignment="Center" FontSize="16"/>
                                        <!-- Save Icon -->
                                    </StackPanel>
                                </Button>
                            </StackPanel>


                            <!-- Elapsed Time Display -->
                            <TextBlock Name="ElapsedTimeTextBlock" Text="0:00" HorizontalAlignment="Center" Margin="2" />
                        </StackPanel>

                        <!-- Recording List (Second Column) -->
                        <DataGrid Name="RecordingDataGrid" AutoGenerateColumns="False" Margin="2" Grid.Column="1">
                            <DataGrid.Columns>
                                <!-- S.No Column -->
                                <DataGridTextColumn Header="S.No" Binding="{Binding SerialNumber}" Width="50" IsReadOnly="True"/>

                                <!-- FileName Column -->
                                <DataGridTextColumn Header="File Name" Binding="{Binding FileName}" Width="*" IsReadOnly="True"/>

                                <!-- Duration Column -->
                                <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="100" IsReadOnly="True"/>
                            </DataGrid.Columns>

                            <!-- Context Menu -->
                            <DataGrid.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Play" Click="PlayRecording_Click" />
                                    <MenuItem Header="Rename" Click="RenameRecording_Click" />
                                    <MenuItem Header="Add to Playlist" Click="AddToPlaylist_Click" />
                                    <MenuItem Header="Delete" Click="DeleteRecording_Click" />
                                </ContextMenu>
                            </DataGrid.ContextMenu>
                        </DataGrid>

                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Margin="563,484,0,0">
            <!-- Add common options controls here -->
            <!--<Label Content="Common Option 1"/>
            <Button Content="Option 1"/>-->
        </StackPanel>
        <Grid Grid.Row="6" Margin="2,2,2,2" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StatusBar Grid.Row="0" Grid.Column="0" Height="24" Margin="2">
                <TextBlock x:Name="tb_sb" Height="24" Text="Status"/>
            </StatusBar>
            <TextBlock Text=" (c) 2024 | TOPGRIP | All Rights Reserved" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Height="24" Margin="20,2,2,2"/>
        </Grid>
    </Grid>
</Window>
