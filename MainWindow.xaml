                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Logs Header Section -->
                    <StackPanel Orientation="Vertical" Margin="10" Grid.Row="0">
                        <TextBlock Text="Logs" FontSize="24" FontWeight="Bold" Margin="5"/>
                        <TextBlock Text="View, download, and manage system logs for the IPIS." Margin="5"/>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                            <Button Content="Download Logs" Width="100" Height="30" Margin="5" Click="DownloadLogsButton_Click"/>
                            <Button Content="Clear Logs" Width="100" Height="30" Margin="5" Click="ClearLogsButton_Click"/>
                            <Button Content="Archive Logs" Width="100" Height="30" Margin="5" Click="ArchiveLogsButton_Click"/>
                        </StackPanel>

                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="Select Date" Margin="5"/>
                                <DatePicker Name="SelectedDatePicker" SelectedDateChanged="SelectedDatePicker_SelectedDateChanged" Margin="5"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5">
                                <Button Content="Yesterday" Width="100" Height="30" Margin="5" Click="YesterdayLogsButton_Click"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="5">
                                <Button Content="Download Selected Date" Width="200" Height="30" Margin="5" Click="DownloadSelectedDateLogsButton_Click"/>
                            </StackPanel>
                        </Grid>

                        <Grid Margin="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="5">
                                <TextBlock Text="From Date" Margin="5"/>
                                <DatePicker Name="FromDatePicker" SelectedDateChanged="FromDatePicker_SelectedDateChanged" Margin="5"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="To Date" Margin="5"/>
                                <DatePicker Name="ToDatePicker" SelectedDateChanged="ToDatePicker_SelectedDateChanged" Margin="5"/>
                            </StackPanel>
                        </Grid>
                        <Button Content="Download Date Range" Width="200" Height="30" Margin="5" Click="DownloadDateRangeLogsButton_Click"/>
                    </StackPanel>

                    <!-- Logs DataGrid Section -->
                    <DataGrid Name="LogsDataGrid" AutoGenerateColumns="False" Margin="10" Grid.Row="1">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="*"/>
                            <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="*"/>
                            <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-backup.png" Margin="2"/>
                        <TextBlock Text="BACKUP" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Backup Section -->
                    <GroupBox Header="Backup" Grid.Column="0" Margin="10">
                        <StackPanel Margin="10">
                            <!-- Description -->
                            <TextBlock VerticalAlignment="Center" Text="Manage your backups and set up scheduled backups" TextWrapping="Wrap" Margin="5"/>

                            <!-- Backup Now Section -->
                            <TextBlock VerticalAlignment="Center" Text="Backup Now" FontWeight="Bold" Margin="5"/>
                            <StackPanel Orientation="Vertical" Margin="5">
                                <TextBlock Text="Backup Location:" VerticalAlignment="Center" Margin="5"/>
                                <RadioButton Content="Local Storage" GroupName="BackupLocation" Margin="5" Checked="BackupLocationRadioButton_Checked"/>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="Path:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox VerticalContentAlignment="Center" Name="BackupPathTextBox" Height="30" Width="200" Margin="5" IsReadOnly="True"/>
                                    <Button Content="Browse" Width="100" Height="30" Margin="5" Click="BrowseBackupLocationButton_Click"/>
                                </StackPanel>

                                <RadioButton Content="Cloud Storage" GroupName="BackupLocation" Margin="5" Checked="BackupLocationRadioButton_Checked"/>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="URL:" VerticalAlignment="Center" Margin="5"/>
                                    <TextBox VerticalContentAlignment="Center" Name="BackupUrlTextBox" Width="200" Height="30" Margin="5"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="Backup Now" Width="100" Height="30" Margin="5" HorizontalAlignment="Left" Click="BackupNowButton_Click"/>

                            <!-- Schedule Backup Section -->
                            <TextBlock VerticalAlignment="Center" Text="Schedule Backup" FontWeight="Bold" Margin="5"/>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Frequency:" VerticalAlignment="Center" Margin="5"/>
                                <ComboBox Name="FrequencyComboBox" Width="100" Height="30" Margin="5">
                                    <ComboBoxItem Content="Daily"/>
                                    <ComboBoxItem Content="Weekly"/>
                                    <ComboBoxItem Content="Monthly"/>
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Backup Time:" VerticalAlignment="Center" Margin="5"/>
                                <xctk:TimePicker Name="BackupTimePicker" Width="100" Margin="5"/>
                            </StackPanel>
                            <Button Content="Set Schedule" Width="100" Height="30" Margin="5" HorizontalAlignment="Left" Click="SetScheduleButton_Click"/>

                            <!-- Notification Settings Section -->
                            <TextBlock VerticalAlignment="Center" Text="Notification Settings" FontWeight="Bold" Margin="5"/>
                            <StackPanel Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Email:" VerticalAlignment="Center" Margin="5"/>
                                <TextBox VerticalContentAlignment="Center" Name="NotificationEmailTextBox2" Width="200" Height="30" Margin="5"/>
                            </StackPanel>
                            <Button Content="Save Settings" Width="100" Height="30" Margin="5" HorizontalAlignment="Left" Click="SaveSettingsButton_Click"/>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="Restore" Grid.Column="1" Margin="10">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Description -->
                            <TextBlock VerticalAlignment="Center" Text="Restore data from available backup points" TextWrapping="Wrap" Margin="5" Grid.Row="0"/>

                            <!-- Restore Now Section -->
                            <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="1">
                                <TextBlock Text="Restore Point:" VerticalAlignment="Center" Margin="5"/>
                                <ComboBox Name="RestorePointComboBox" Width="200" Height="30" Margin="5"/>
                                <Button Content="Restore Now" Width="100" Height="30" Margin="5" HorizontalAlignment="Left" Click="RestoreNowButton_Click"/>
                            </StackPanel>

                            <!-- Local Backup History -->
                            <TextBlock VerticalAlignment="Center" Text="Local Backup History" FontWeight="Bold" Margin="5" Grid.Row="2"/>
                            <ScrollViewer VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" Margin="5" Grid.Row="3">
                                <DataGrid Name="LocalBackupHistoryDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5" VerticalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Backup Date" Binding="{Binding BackupDate}" Width="*"/>
                                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Download" Width="100" Height="30" Margin="5" Click="DownloadLocalBackupButton_Click"/>
                                                        <Button Content="Delete" Width="100" Height="30" Margin="5" Click="DeleteLocalBackupButton_Click"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>

                            <!-- Cloud Backup History -->
                            <TextBlock VerticalAlignment="Center" Text="Cloud Backup History" FontWeight="Bold" Height="30" Margin="5" Grid.Row="4"/>
                            <ScrollViewer VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" Margin="5" Grid.Row="5">
                                <DataGrid Name="CloudBackupHistoryDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5" VerticalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Backup Date" Binding="{Binding BackupDate}" Width="*"/>
                                        <DataGridTextColumn Header="Details" Binding="{Binding Details}" Width="*"/>
                                        <DataGridTemplateColumn Header="Actions" Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Content="Download" Width="100" Height="30" Margin="5" Click="DownloadCloudBackupButton_Click"/>
                                                        <Button Content="Delete" Width="100" Height="30" Margin="5" Click="DeleteCloudBackupButton_Click"/>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                        </Grid>
                    </GroupBox>

                </Grid>
            </TabItem>

            <TabItem Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Width="24" Height="24" Source="icons/icon-help.png" Margin="2"/>
                        <TextBlock Text="HELP" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- User Manual GroupBox -->
                    <GroupBox Header="User Manual" Grid.Column="0" Margin="10">
                        <StackPanel>
                            <!-- Getting Started -->
                            <Expander Header="Getting Started" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="This section covers the basics of getting started with the CDC software..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Installation -->
                            <Expander Header="Installation" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Instructions on how to install the CDC software..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Dashboard -->
                            <Expander Header="Dashboard" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Overview of the dashboard features and functionalities..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- PA System -->
                            <Expander Header="PA System" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Details on how to configure and use the PA system..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Multimedia -->
                            <Expander Header="Multimedia" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Guide to managing multimedia files and settings..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- User Management -->
                            <Expander Header="User Management" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Learn how to manage users, roles, and permissions in the CDC software..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Station Setup -->
                            <Expander Header="Station Setup" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Steps to set up station information and settings..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Platforms and Devices -->
                            <Expander Header="Platforms and Devices" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Configuration of platforms and connected devices..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- RMS Server -->
                            <Expander Header="RMS Server" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Managing the RMS server and its settings..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Local Settings -->
                            <Expander Header="Local Settings" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Configuring local settings for the CDC..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- New Setup -->
                            <Expander Header="New Setup" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Guidelines for setting up a new installation..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Logs -->
                            <Expander Header="Logs" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Accessing and managing system logs..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>

                            <!-- Backup and Restore -->
                            <Expander Header="Backup and Restore" IsExpanded="False" Margin="5">
                                <TextBlock VerticalAlignment="Center" Text="Procedures for backing up and restoring data..." TextWrapping="Wrap" Margin="5"/>
                            </Expander>
                        </StackPanel>
                    </GroupBox>


                    <GroupBox Header="Ticketing System" Grid.Column="1" Margin="10">
                        <GroupBox Header="Ticketing System" Grid.Column="1" Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Ticketing Form -->
                                <StackPanel Grid.Row="0" Margin="5">
                                    <TextBlock VerticalAlignment="Center" Text="Submit a Ticket" FontWeight="Bold" Margin="5"/>

                                    <TextBlock VerticalAlignment="Center" Text="Title:" Margin="5"/>
                                    <TextBox VerticalContentAlignment="Center" Name="TitleTextBox" Margin="5" Height="30"/>

                                    <TextBlock VerticalAlignment="Center" Text="Description:" Margin="5"/>
                                    <TextBox VerticalContentAlignment="Center" Name="DescriptionTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="5"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Grid.Column="0">
                                            <TextBlock VerticalAlignment="Center" Text="Category:" Margin="5"/>
                                            <ComboBox Name="CategoryComboBox" Width="100" Height="30" Margin="5">
                                                <ComboBoxItem Content="Technical Issue"/>
                                                <ComboBoxItem Content="Account Issue"/>
                                                <ComboBoxItem Content="Other"/>
                                            </ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                                            <TextBlock VerticalAlignment="Center" Text="Attach File:" Margin="5"/>
                                            <Button Content="Browse" Width="100" Height="30" Margin="5" Click="BrowseFileButton_Click"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Content="Submit Ticket" Width="100" Height="30" Margin="10" HorizontalAlignment="Left" Click="SubmitTicketButton_Click"/>
                                </StackPanel>

                                <!-- Ticket List -->
                                <StackPanel Grid.Row="1" Margin="5">
                                    <TextBlock VerticalAlignment="Center" Text="Submitted Tickets" FontWeight="Bold" Margin="10,5,5,5"/>
                                    <ScrollViewer VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" Margin="5">
                                        <DataGrid Name="TicketsDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" Margin="5" VerticalAlignment="Stretch">
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                                                <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                                                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                                                <DataGridTextColumn Header="Timestamp" Binding="{Binding Timestamp}" Width="*"/>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </ScrollViewer>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Width="120" Height="30">
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="DEBUG" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2"/>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ListBox for selecting setting -->
                    <ListBox Name="SettingsListBox" Grid.Column="0" Margin="5" SelectionChanged="SettingsListBox_SelectionChanged">
                        <ListBoxItem Content="workspacePath"/>
                        <ListBoxItem Content="userCategories"/>
                        <ListBoxItem Content="users"/>
                        <ListBoxItem Content="stationInfo"/>
                        <ListBoxItem Content="platformInfo"/>
                        <ListBoxItem Content="displayStyles"/>
                        <ListBoxItem Content="displaySettings"/>
                        <ListBoxItem Content="rmsSettings"/>
                        <ListBoxItem Content="audioSettings"/>
                    </ListBox>

                    <!-- ScrollViewer for displaying selected setting's content -->
                    <ScrollViewer Grid.Column="1" Margin="5">
                        <TextBox Name="SettingsContentTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Add common options controls here -->
            <!--<Label Content="Common Option 1"/>
            <Button Content="Option 1"/>-->
        </StackPanel>
        <Grid Grid.Row="5" Margin="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StatusBar Grid.Row="0" Grid.Column="0" Height="24" Margin="2">
                <TextBlock x:Name="tb_sb" Height="24" Text="Status"/>
            </StatusBar>
            <TextBlock Text=" (c) 2024 | SEIL | All Rights Reserved" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Height="24" Margin="20,2,2,2"/>
        </Grid>
    </Grid>
</Window>
