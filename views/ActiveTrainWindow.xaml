UP
                        </TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[0] , Mode=TwoWay  }"/>
                        <TextBox Grid.Row="0" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[1] , Mode=TwoWay}"/>
