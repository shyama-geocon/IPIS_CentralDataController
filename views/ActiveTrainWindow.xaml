                        <TextBox Grid.Row="0" Grid.Column="5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[4] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[5] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[6] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="8" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[7] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="9" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[8] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[9] , Mode=TwoWay}"/>
                        <TextBox Grid.Row="0" Grid.Column="11" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="2" Width="40" Height="30" Text="{Binding ActiveTrain.CoachList[10] , Mode=TwoWay}"/>
