<Window x:Class="IpisCentralDisplayController.views.DeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:IpisCentralDisplayController.models"
        Title="Device Dialog" Height="320" Width="400" WindowStartupLocation="CenterScreen">
    
    <StackPanel Orientation="Vertical" Margin="2">
        <TextBlock Text="Device Details" FontWeight="Bold" FontSize="16" Margin="2"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Platform Number:" VerticalAlignment="Center" Margin="2"/>
            <TextBox Grid.Row="0" Grid.Column="1" Height="24" Margin="2" x:Name="PlatformNumberTextBox" IsReadOnly="True"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Device Type:" VerticalAlignment="Center" Margin="2"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Height="24" Margin="2" x:Name="DeviceTypeComboBox" SelectionChanged="DeviceTypeComboBox_SelectionChanged">
                <ComboBox.ItemsSource>
                    <x:Array Type="{x:Type models:DeviceType}">
                        <models:DeviceType>CDS</models:DeviceType>
                        <models:DeviceType>PrimaryServer</models:DeviceType>
                        <models:DeviceType>SecondaryServer</models:DeviceType>
                        <models:DeviceType>PDC</models:DeviceType>
                        <models:DeviceType>CGDB</models:DeviceType>
                        <models:DeviceType>AGDB</models:DeviceType>
                        <models:DeviceType>PFDB</models:DeviceType>
                        <models:DeviceType>OVD</models:DeviceType>
                        <models:DeviceType>IVD</models:DeviceType>
                        <models:DeviceType>SLDB</models:DeviceType>
                        <models:DeviceType>MLDB</models:DeviceType>
                        <models:DeviceType>LED_TV</models:DeviceType>
                        <models:DeviceType>NW_SW</models:DeviceType>
                    </x:Array>
                </ComboBox.ItemsSource>
            </ComboBox>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="IP Address:" VerticalAlignment="Center" Margin="2"/>
            <TextBox Grid.Row="2" Grid.Column="1" Height="24" Margin="2" x:Name="IpAddressTextBox"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="Description:" VerticalAlignment="Center" Margin="2"/>
            <TextBox Grid.Row="3" Grid.Column="1" Height="24" Margin="2" x:Name="DescriptionTextBox"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Enabled:" VerticalAlignment="Center" Margin="2"/>
            <CheckBox Grid.Row="4" Grid.Column="1" Height="24" Margin="2" x:Name="EnabledCheckBox"/>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
            <Button Content="Save" Height="30" Width="100" Margin="2" Click="SaveButton_Click"/>
            <Button Content="Cancel" Height="30" Width="100" Margin="2" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
    
</Window>
