<Window x:Class="IpisCentralDisplayController.views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="160" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="2">
        <TextBlock Text="{Binding Prompt}" Margin="0,0,0,10"/>
        <TextBox Name="InputTextBox" Width="250" Height="30" VerticalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2">
            <Button Content="OK" Width="100" Height="30" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Click="CancelButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </StackPanel>
</Window>
