<Window x:Class="IpisCentralDisplayController.views.SplPopUpOldPFNo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IpisCentralDisplayController.views"
        mc:Ignorable="d"
        Title="SplPopUpOldPFNo" Height="300" Width="300">

    <StackPanel Orientation="Vertical" Margin="2">
        <TextBlock Text="Platform Number" FontWeight="Bold" FontSize="16" Margin="2"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Old PF No: " VerticalAlignment="Center" Margin="2"/>
            <ComboBox Grid.Row="0" Grid.Column="1" Height="24" Margin="2" Width="150" 
                      ItemsSource="{Binding PlatformOptions}" SelectedItem="{Binding Train.OldPFNo}">
                <!--<ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PlatformString}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>-->
            </ComboBox>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="New PF No: " VerticalAlignment="Center" Margin="2"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Height="24" Margin="2"  Width="150" 
                            ItemsSource="{Binding PlatformOptions}" SelectedItem="{Binding Train.PFNo}">
                <!--<ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PlatformString}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>-->
            </ComboBox>

        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="2,5,2,2">
            <Button Content="Save" Height="30" Width="100" Margin="2" Click="SaveButton_Click"/>
            <Button Content="Cancel" Height="30" Width="100" Margin="2" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>


</Window>

