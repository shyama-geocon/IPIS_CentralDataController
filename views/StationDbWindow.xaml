                            <TextBox Text="{Binding SelectedStation.StationNameMarathi}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Manipuri -->
