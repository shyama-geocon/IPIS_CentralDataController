                        </StackPanel>

                        <!-- Sanskrit -->
                        <TextBlock Text="Station Name (Sanskrit):" VerticalAlignment="Center" Margin="5" Grid.Row="14"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="14" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameSanskrit}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Sindhi -->
                        <TextBlock Text="Station Name (Sindhi):" VerticalAlignment="Center" Margin="5" Grid.Row="15"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="15" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameSindhi}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Tamil -->
                        <TextBlock Text="Station Name (Tamil):" VerticalAlignment="Center" Margin="5" Grid.Row="16"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="16" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameTamil}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Telugu -->
                        <TextBlock Text="Station Name (Telugu):" VerticalAlignment="Center" Margin="5" Grid.Row="17"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="17" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameTelugu}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Urdu -->
                        <TextBlock Text="Station Name (Urdu):" VerticalAlignment="Center" Margin="5" Grid.Row="18"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="18" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameUrdu}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
        </Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Column="0" Grid.Row="1">
            <Button Content="Add Station" Width="100" Height="30" Margin="5" Click="AddStationButton_Click"/>
            <Button Content="Edit Station" Width="100" Height="30" Margin="5" Click="UpdateStationButton_Click"/>
            <Button Content="Delete Selected" Width="100" Height="30" Margin="5" Click="DeleteStationButton_Click"/>
            <Button Content="Delete All" Width="100" Height="30" Margin="5" Click="DeleteAllStationsButton_Click"/>
            <Button Content="Import" Width="100" Height="30" Margin="5" Click="ImportButton_Click"/>
            <Button Content="Export" Width="100" Height="30" Margin="5" Click="ExportButton_Click"/>
        </StackPanel>
        <TextBlock Grid.Row="2" x:Name="tb_status" Height="24" HorizontalAlignment="Center"/>
    </Grid>
</Window>
