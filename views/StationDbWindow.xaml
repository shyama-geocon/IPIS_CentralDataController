                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Nepali -->
                        <TextBlock Text="Station Name (Nepali):" VerticalAlignment="Center" Margin="5" Grid.Row="11"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="11" Grid.Column="1">
