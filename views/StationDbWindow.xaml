                        </StackPanel>

                        <!-- Punjabi -->
                        <TextBlock Text="Station Name (Punjabi):" VerticalAlignment="Center" Margin="5" Grid.Row="13"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="13" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNamePunjabi}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
