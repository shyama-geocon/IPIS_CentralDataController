                            <TextBox Text="{Binding SelectedStation.StationNameBangla}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
                            <Button Content="Play" Width="80" Height="30" Margin="5"/>
                            <Button Content="Browse" Width="80" Height="30" Margin="5"/>
                        </StackPanel>

                        <!-- Dogri -->
                        <TextBlock Text="Station Name (Dogri):" VerticalAlignment="Center" Margin="5" Grid.Row="4"/>
                        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1">
                            <TextBox Text="{Binding SelectedStation.StationNameDogri}" VerticalAlignment="Center" Height="30" Margin="5" Width="200"/>
